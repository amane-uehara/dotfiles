[
    // ビルド
    {
      "key": "ctrl+shift+b",
      "command": "workbench.action.tasks.build",
      "when": "taskCommandsRegistered"
    },
    {
      "key": "ctrl+shift+r",
      "command": "workbench.action.reloadWindow"
    },
    // ファイル検索
    {
      "key": "ctrl+shift+i",
      "command": "workbench.action.quickOpen",
    },

    // ファイラ
    {
      "key": "ctrl+shift+h",
      "command": "workbench.view.explorer",
      "when": "viewContainer.workbench.view.explorer.enabled"
    },

    {
      "key": "ctrl+f",
      "command": "extension.multiCommand.execute",
      "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus",
      "args": {
        "sequence": [
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
        ]
      }
    },
    {
      "key": "ctrl+b",
      "command": "extension.multiCommand.execute",
      "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus",
      "args": {
        "sequence": [
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
        ]
      }
    },

    // ターミナル
    {
      "key": "ctrl+shift+m",
      "command": "workbench.action.toggleMaximizedPanel",
      "when": "terminalFocus"
    },
    {
      "key": "ctrl+shift+,",
      "command": "workbench.action.togglePanel"
    },

    // タブ間移動
    {
      "key": "ctrl+shift+j",
      "command": "workbench.action.previousEditor"
    },
    {
      "key": "ctrl+shift+k",
      "command": "workbench.action.nextEditor"
    },
    {
      "key": "ctrl+shift+j",
      "command": "workbench.action.nextEditorInGroup",
      "when": "terminalFocus"
    },
    {
      "key": "ctrl+shift+k",
      "command": "workbench.action.previousEditorInGroup",
      "when": "terminalFocus"
    },
    {
      "key": "ctrl+shift+d",
       "command": "workbench.action.terminal.killEditor"
    },

    // Vimキーバインドとの衝突回避
    {
      "key": "ctrl+n",
      "command": "workbench.action.quickOpenNavigateNext",
      "when": "inQuickOpen"
    },
    {
      "key": "ctrl+p",
      "command": "workbench.action.quickOpenNavigatePrevious",
      "when": "inQuickOpen"
    }
]
